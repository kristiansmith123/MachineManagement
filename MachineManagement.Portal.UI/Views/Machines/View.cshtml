@model MachineManagement.Portal.UI.Models.MachineViewModel
@{
    ViewBag.Title = Model.Name;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title</h2>

<div class="row">
    <div class="col-md-12">
        <p>
            <a href="/Machines/Edit/@Model.Id" class="btn btn-default">Edit</a>
            <a href="/Machines/Delete/@Model.Id" class="btn btn-danger">Delete</a>
        </p>

        <div class="row" style="padding-bottom:50px"></div>

        <div class="form-group">
            @Html.Label("Status", new { @class = "control-label" })
            <span class="status form-inline">...</span>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Name, new { @class = "control-label" })
            @Html.DisplayFor(m => m.Name, new { @class = "form-control" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Ip, new { @class = "control-label" })
            @Html.DisplayFor(m => m.Ip, new { @class = "form-control" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Username, new { @class = "control-label" })
            @Html.DisplayFor(m => m.Username, new { @class = "form-control" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Password, new { @class = "control-label" })
            @Html.DisplayFor(m => m.Password, new { @class = "form-control" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.ProxyIP, new { @class = "control-label" })
            @Html.DisplayFor(m => m.ProxyIP, new { @class = "form-control" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.ProxyName, new { @class = "control-label" })
            @Html.DisplayFor(m => m.ProxyName, new { @class = "form-control" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.ProxyResourceGroup, new { @class = "control-label" })
            @Html.DisplayFor(m => m.ProxyResourceGroup, new { @class = "form-control" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.ProxyUsername, new { @class = "control-label" })
            @Html.DisplayFor(m => m.ProxyUsername, new { @class = "form-control" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.ProxyPassword, new { @class = "control-label" })
            @Html.DisplayFor(m => m.ProxyPassword, new { @class = "form-control" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.BotUsername, new { @class = "control-label" })
            @Html.DisplayFor(m => m.BotUsername, new { @class = "form-control" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.BotPassword, new { @class = "control-label" })
            @Html.DisplayFor(m => m.BotPassword, new { @class = "form-control" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Notes, new { @class = "control-label" })
            @Html.DisplayFor(m => m.Notes, new { @class = "form-control" })
        </div>
    </div>
</div>

@section scripts
    {
    <script type="text/javascript">
        $(function () {
            $.getJSON(
                '/Machines/IsOnline/',
                {
                    ipAddress: '@Model.Ip'
                },
                function (data) {
                    if (data) {
                        $(".status").html("Online");
                    }
                    else {
                        $(".status").html("Offline");
                    }
                });
        });
    </script>
}

